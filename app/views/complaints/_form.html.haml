= form_for @complaint do |f|
  -if @complaint.errors.any?
    #error_explanation
      %h2= "#{pluralize(@complaint.errors.count, "error")} prohibited this complaint from being saved:"
      %ul
        - @complaint.errors.full_messages.each do |msg|
          %li= msg

  
  .field
    = f.label :place_occurence
    = f.text_field :place_occurence
  .field
    = f.label :occurence_date_time
    = f.datetime_select :occurence_date_time
  .field
    = f.label :fly_destination
    = f.check_box :fly_destination
  .field
    = f.label :from_to
    = f.text_field :from_to
  .field
    = f.label :excess_charged
    = f.check_box :excess_charged
  .field
    = f.label :indecent_behaviour
    = f.check_box :indecent_behaviour
  .field
    = f.label :charged_and_allowed_other_complainant
    = f.check_box :charged_and_allowed_other_complainant
  .field
    = f.label :charged_for_luggage
    = f.text_field :indecent_behaviour
  .field
    = f.label :from_to
    = f.text_field :from_to
  .field
    = f.label :bus_stop_name
    = f.text_field :bus_stop_name
  .field
    = f.label :other_complaints
    = f.text_field :other_complaints, size: "40x50"

  
  .actions
    = f.submit 'Save',:class => "btn"

